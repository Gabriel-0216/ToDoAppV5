@model ToDoAppV5.Models.Atividade

@{
    ViewData["Title"] = "Delete";
}

<h3>Deseja mesmo deletar?</h3>
<div>
    <h4>Atividade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da atividade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeAtividade)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoria)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdStatus)
        </dd>
        <dt class = "col-sm-2">
            Realizador
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRealizador)
        </dd>
        <dt class = "col-sm-2">
            Data de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRegistro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
