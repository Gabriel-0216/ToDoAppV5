@model ToDoAppV5.Models.Status

@{
    ViewData["Title"] = "Delete";
}

<h3>Você tem certeza que deseja apagar esse registro?</h3>
<div>
    <h4>Status</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeStatus)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar</a>
    </form>
</div>
